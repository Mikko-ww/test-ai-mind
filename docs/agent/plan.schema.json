{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Plan Schema",
  "description": "Schema for agent execution plan YAML files",
  "type": "object",
  "required": ["parent_issue", "created_at", "status", "tasks"],
  "properties": {
    "parent_issue": {
      "type": "integer",
      "description": "Parent issue number",
      "minimum": 1
    },
    "spec_path": {
      "type": "string",
      "description": "Path to the specification document"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Plan creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "executing", "blocked", "paused", "done", "cancelled"],
      "description": "Overall plan status"
    },
    "tasks": {
      "type": "array",
      "description": "List of tasks in execution order",
      "items": {
        "type": "object",
        "required": ["id", "title", "level", "status"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^task-[0-9]+$",
            "description": "Unique task identifier (e.g., task-1)"
          },
          "title": {
            "type": "string",
            "description": "Task title",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Detailed task description"
          },
          "level": {
            "type": "string",
            "enum": ["L1", "L2", "L3"],
            "description": "Task merge policy level"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in-progress", "in-review", "blocked", "done", "cancelled"],
            "description": "Task status"
          },
          "issue": {
            "type": ["integer", "null"],
            "description": "Task issue number",
            "minimum": 1
          },
          "pr": {
            "type": ["integer", "null"],
            "description": "Task PR number",
            "minimum": 1
          },
          "deps": {
            "type": "array",
            "description": "Task dependencies (task IDs)",
            "items": {
              "type": "string",
              "pattern": "^task-[0-9]+$"
            }
          },
          "acceptance": {
            "type": "array",
            "description": "Acceptance criteria",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "string",
            "description": "Additional notes or context"
          },
          "started_at": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "Task start timestamp"
          },
          "completed_at": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "Task completion timestamp"
          },
          "retry_count": {
            "type": "integer",
            "description": "Number of retry attempts",
            "minimum": 0,
            "default": 0
          }
        }
      }
    }
  }
}
